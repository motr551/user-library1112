<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head.ejs'); %>
  <%- include('../layout/form.ejs'); %>
</head>
<body>
  <%- include('../layout/bodyMenu.ejs'); %>
  
  <div style="width: 850px; float:left;  " >  
    <h1>GENRE DETAIL</h1>
    <h3 style=" margin-inline-start: -20px; ">    Genre: <%= genre.name %></h3>

    <h4>Books</h4>
        
    <% for (i=0; i< genre_books.length; i++) { %>
       <dl> 
        <dt>
        <a href= <%= genre_books[i].url %> > 
            <%= genre_books[i].title %>
          </a>
        </dt>
        <dd 
          style="margin-inline-start: 0px; "> 
          <%= genre_books[i].summary %>
        </dd>
      </dl>
    <% } %>
    
    <!-- If no books available -->
    <% if (genre_books.length == 0) { %>
      <p style="color: red"  >This genre has no books in Library as yet!</p>
    <% }  %>

    <!-- Input to select delete -->
    <% if (username == 'admin') { %>
      <hr> 
      <p><a href='<%= genre.url %>/delete'>
        Delete genre
        </a>
      </p>
      <p> <a href='<%= genre.url %>/update' >
        Update Genre </a> 
      </p>
    <% } %>

  </div> 
</body>
</html>    
   