<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head.ejs'); %>
  <%- include('../layout/form.ejs'); %>
</head>
<body>
  <%- include('../layout/bodyMenu.ejs'); %>
  <div style="width: 850px; float:left; " >  
    
    <h1><%= title %></h1>
    
    <form action="" method='post'>
      <div>
        <!-- Genre type/name -->
        <label for="name" >
          Genre:
        </label>
        <br>

        <input id="name" type="text" placeholder="Fantasy, Peotry etc." name='name' required='true'
          value=
          <% if (typeof genre == 'object' && genre ) { %>
              '<%= genre.name %>'
              <% } else {%>
              '<%= "" %>'  
          <% } %>
          
          
        >
        <button type='submit'>Submit</button>
        
        <ul>
        <% if (typeof errors == 'object' && errors ) { %>
          <% for (i=0;i<errors.length;i++){ %>
            <li>
              <%= errors[i].msg %>
            </li>
            
          <% } %>
        <% } %>

      </ul>
      </div>

    </form>
  </div> 
</body>
</html>    
