<body>
  <%- include('menu.ejs'); %>
  <div style="width: 850px; float:left; " > 
    <!-- Start of bookinstance_list.ejs -->

    
    <h1><%= title %></h1>
    <ul>
      <% for (i=0; i< bookinstance_list.length; i++) { %>
        <li>
          <a href= <%= bookinstance_list[i].book.title %> > 
            <%= bookinstance_list[i].book.title %> :
            <%= bookinstance_list[i].imprint %>
          </a>
          <% if ( bookinstance_list[i].status == 'Available') { %>
            <font color="silver"> <%= bookinstance_list[i].status %> 
            </font> 
          <% } else { %> 
            <font color="red"> <%= bookinstance_list[i].status %> </font> (due: <%= bookinstance_list[i].due_back %> )
          <% } %> 

        </li>
      <% } %>
    </ul>    
    
    <!-- end of bookinstance_list.ejs -->
   
  </div> 

</body>
