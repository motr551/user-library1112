<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head.ejs'); %>
  <%- include('../layout/form.ejs'); %>
</head>
<body>
  <%- include('../layout/bodyMenu.ejs'); %>
  <div style="width: 850px; float:left;">  
    <h1>AUTHOR DETAILS</h1>
    <h3>Author: <%= author.name %> </h3>
    <p><%= author.dateOfBirth %> - <%= author.dateOfDeath %></p>  

    <div style='margin-left:20px;margin-top:20px'>
      <h4>Books</h4>
      <dl>
        
        <% for(i=0; i<author_books.length; i++)     {  %>

        <dt>
          <a href= 
            <%= author_books[i].url %> >
            <%= author_books[i].title %>
          </a>
        </dt>
        <dd>
          <%= author_books[i].summary %>
        </dd>

        <% } %>

        <!-- If no books available -->
        <% if (author_books.length == 0) { %>
          <p style="color: red"  >This author has no books in Library as yet!</p>
        <% }  %>
      </dl>
      
      <% if (username == 'admin') { %>
        <hr> 
        <p><a href='<%= author.url %>/delete'>
          Delete Author
          </a>
        </p>
        <p> <a href='<%= author.url %>/update' >
          Update Author </a> 
        </p>
        <% } %>

    </div>

  </div>
</body>
</html>    

